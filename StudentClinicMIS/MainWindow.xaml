<Window x:Class="StudentClinicMIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пациенты" Height="500" Width="900">
    <DockPanel Margin="10">

        <!-- Панель кнопок сверху -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,10,0" VerticalAlignment="Center" />
            <Button Content="Поиск" Width="80" Margin="0,0,10,0" Click="SearchButton_Click"/>
            <Button Content="Добавить" Width="100" Margin="0,0,10,0" Click="AddPatientButton_Click"/>
            <Button Content="Редактировать" Width="120" Margin="0,0,10,0" Click="EditPatientButton_Click"/>
            <Button Content="Удалить" Width="100" Margin="0,0,10,0" Click="DeletePatientButton_Click"/>
            <Button Content="История посещений" Width="150" Click="ViewAppointmentsButton_Click"/>
        </StackPanel>

        <!-- Таблица пациентов -->
        <DataGrid x:Name="PatientsDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PatientId}" Width="*" />
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*" />
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*" />
                <DataGridTextColumn Header="Отчество" Binding="{Binding MiddleName}" Width="*" />
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding BirthDate}" Width="*" />
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Window>
