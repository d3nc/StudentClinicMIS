<Window x:Class="StudentClinicMIS.Views.AddAppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Запись на приём"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel>
			<TextBlock Text="Выберите врача:" Margin="0,5,0,0"/>
			<ComboBox x:Name="DoctorComboBox"
                      DisplayMemberPath="EmployeeFullName"
                      SelectedValuePath="DoctorId"
                      Margin="0,5"/>

			<TextBlock Text="Дата приёма:" Margin="0,10,0,0"/>
			<DatePicker x:Name="DatePicker" Margin="0,5"/>

			<TextBlock Text="Время начала (HH:mm):" Margin="0,10,0,0"/>
			<TextBox x:Name="StartTimeBox" Margin="0,5"/>

			<Button Content="Сохранить"
                    Click="SaveButton_Click"
                    HorizontalAlignment="Right"
                    Width="100"
                    Margin="0,15,0,0"/>
		</StackPanel>
	</Grid>
</Window>
