<Window x:Class="StudentClinicMIS.Views.AddPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить / Редактировать пациента" Height="350" Width="400">
	<StackPanel Margin="10">
		<TextBlock Text="Фамилия" />
		<TextBox x:Name="LastNameBox" Margin="0,5"/>

		<TextBlock Text="Имя" />
		<TextBox x:Name="FirstNameBox" Margin="0,5"/>

		<TextBlock Text="Отчество" />
		<TextBox x:Name="MiddleNameBox" Margin="0,5"/>

		<TextBlock Text="Телефон" />
		<TextBox x:Name="PhoneBox" Margin="0,5"/>

		<TextBlock Text="Дата рождения" />
		<DatePicker x:Name="BirthDatePicker" Margin="0,5"/>

		<Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Margin="0,10"/>
	</StackPanel>
</Window>
