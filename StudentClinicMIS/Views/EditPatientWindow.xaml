<Window x:Class="StudentClinicMIS.Views.EditPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать пациента" Height="350" Width="400">
	<StackPanel Margin="20">
		<StackPanel Margin="0 5">
			<TextBlock Text="Имя"/>
			<TextBox x:Name="FirstNameBox"/>
		</StackPanel>
		<StackPanel Margin="0 5">
			<TextBlock Text="Фамилия"/>
			<TextBox x:Name="LastNameBox"/>
		</StackPanel>
		<StackPanel Margin="0 5">
			<TextBlock Text="Отчество"/>
			<TextBox x:Name="MiddleNameBox"/>
		</StackPanel>
		<StackPanel Margin="0 5">
			<TextBlock Text="Дата рождения"/>
			<DatePicker x:Name="BirthDatePicker"/>
		</StackPanel>
		<StackPanel Margin="0 5">
			<TextBlock Text="Телефон"/>
			<TextBox x:Name="PhoneBox"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10">
			<Button Content="Сохранить" Width="100" Margin="5" Click="SaveButton_Click"/>
			<Button Content="Отмена" Width="100" Margin="5" Click="CancelButton_Click"/>
		</StackPanel>
	</StackPanel>
</Window>
